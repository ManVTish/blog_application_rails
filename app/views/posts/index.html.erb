<p id="notice"><%= notice %></p>

<div class="overflow-y-scroll">
  <h1 class="mb-4 text-4xl font-black">Posts</h1>
  <div class="constants-list">
    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'Show', post, class: "block border border-blue w-full p-3 rounded mb-4" %></td>
          <td><%= link_to 'Edit', edit_post_path(post), class: "block border border-blue w-full p-3 rounded mb-4" %></td>
          <td><%= link_to 'Destroy', post_path(post.id), class: "block border border-blue w-full p-3 rounded mb-4", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'New Post', new_post_path, class: "block border border-blue w-full p-3 rounded mb-4" %>
</div>
