<% provide(:title, 'Create Post') %>
<h1>Create Post</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @post) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :description %>
      <%= f.text_field :body %>
      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
